local discordBtn = createModernButton("ðŸ”— COPIAR DISCORD", 1)
discordBtn.BackgroundColor3 = Color3.fromRGB(100, 200, 100)

local discordCorner = discordBtn:FindFirstChildOfClass("UICorner") or Instance.new("UICorner")
discordCorner.CornerRadius = UDim.new(0, 15)
discordCorner.Parent = discordBtn

local discordStroke = discordBtn:FindFirstChildOfClass("UIStroke") or Instance.new("UIStroke")
discordStroke.Color = Color3.fromRGB(150, 220, 150)
discordStroke.Thickness = 2.5
discordStroke.Transparency = 0.4
discordStroke.Parent = discordBtn

local discordHoverTween = TweenService:Create(discordBtn, TweenInfo.new(0.18, Enum.EasingStyle.Quart), {
    BackgroundColor3 = Color3.fromRGB(120, 220, 120)
})

local discordNormalTween = TweenService:Create(discordBtn, TweenInfo.new(0.18, Enum.EasingStyle.Quart), {
    BackgroundColor3 = Color3.fromRGB(100, 200, 100)
})

local discordClickDebounce = false

discordBtn.MouseEnter:Connect(function()
    if not discordClickDebounce then
        discordHoverTween:Play()
    end
end)

discordBtn.MouseLeave:Connect(function()
    if not discordClickDebounce then
        discordNormalTween:Play()
    end
end)

discordBtn.MouseButton1Click:Connect(function()
    if discordClickDebounce then return end
    discordClickDebounce = true

    local discordLink = "https://discord.gg/mBeGpFgXCA"
    if setclipboard then
        setclipboard(discordLink)
    end

    local originalText = discordBtn.Text
    discordBtn.Text = "âœ… COPIADO!"
    discordBtn.BackgroundColor3 = Color3.fromRGB(130, 230, 130)

    task.wait(2)

    discordBtn.Text = originalText
    discordBtn.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
    discordClickDebounce = false
end)

task.spawn(function()
    while discordBtn.Parent do
        TweenService:Create(discordStroke, TweenInfo.new(0.75, Enum.EasingStyle.Sine, Enum.EasingDirection.Out), {
            Transparency = 0.2
        }):Play()
        task.wait(0.75)
        TweenService:Create(discordStroke, TweenInfo.new(0.75, Enum.EasingStyle.Sine, Enum.EasingDirection.In), {
            Transparency = 0.8
        }):Play()
        task.wait(0.75)
    end
end)

